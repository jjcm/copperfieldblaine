= form_for @inference do |f|
  - if @inference.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inference.errors.count, "error")} prohibited this inference from being saved:"
      %ul
        - @inference.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :inference
    = f.text_field :inference
  .actions
    = f.submit 'Save'
