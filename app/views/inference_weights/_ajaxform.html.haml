= form_for([@inference_weight], remote: true) do |f|
  - if @inference_weight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inference_weight.errors.count, "error")} prohibited this inference_weight from being saved:"
      %ul
        - @inference_weight.errors.full_messages.each do |msg|
          %li= msg

  .field.hidden
    = f.label :answer_id
    = f.number_field :answer_id, :value => answer
  .field
    = f.label :inference_id
    = f.collection_select :inference_id, @inferences, :id, :inference
  .field
    = f.label :weight
    = f.text_field :weight
  .actions
    = f.submit 'Save'


