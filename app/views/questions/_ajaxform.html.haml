= form_for([@question], remote: true) do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field.hidden
    = f.label :survey_id
    = f.number_field :survey_id, :value => params[:id]
  .actions
    = f.submit 'Save', :id => "createNewQuestion"

:javascript
  $('#createNewQuestion').click(function(){
    var questions = $('#questions');
    questions.append('<h4>' + $('#question_question').val() + '</h4>');
  });
