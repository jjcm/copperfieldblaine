= form_for @answer do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question_id
    = f.collection_select :question_id, @questions, :id, :question
  .field
    = f.label :answer
    = f.text_field :answer
  .actions
    = f.submit 'Save'
