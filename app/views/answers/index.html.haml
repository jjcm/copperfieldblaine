%h1 Listing answers

%table#answerTable
  %thead
    %tr
      %th Question
      %th Answer
      %th
      %th
      %th

  %tbody
    - @answers.each do |answer|
      %tr
        %td= answer.question.nil? ? "NO QUESTION FOUND" : answer.question.question
        %td= answer.answer
        %td= link_to 'Show', answer
        %td= link_to 'Edit', edit_answer_path(answer)
        %td= link_to 'Destroy', answer, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Answer', new_answer_path

:javascript
  $('#answerTable').tablesorter();
